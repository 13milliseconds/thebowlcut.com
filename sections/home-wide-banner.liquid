{% assign full = section.settings.full %}
{% assign margin = section.settings.margin | split: ',' %}
{% assign top = margin[0] %}
{% assign bottom = margin[1] %}
 {% if section.settings.show_left_image %}  
{% assign column  = 'dt-sc-column two-column' %}
{% else %}
{% assign column  = 'dt-sc-column' %}
{% endif %}



<div class="{% if section.settings.full %} container-fluid {% else %}container{% endif %} {% if section.settings.show_overlay %}dt-sc-overlay{% endif %} {{ section.settings.custom_class_name }}">   
  <div class="wide-banner-type " style="margin-top:{{top}}px; margin-bottom:{{bottom}}px; {% if section.settings.show_image_1 %}background-image:url('{{ section.settings.image_1 | img_url: '1920X' }}');background-attachment:fixed;background-repeat:no-repeat;background-position:center center; {% else %}background-color:{{section.settings.background_color}};{% endif%}">
    <div class="container">
      <div class="{{column}} CollectionItems" {% if section.settings.pattern_image != blank %}style="background-image:url('{{ section.settings.pattern_image | img_url: 'master' }}');background-repeat:repeat;background-position:center center; "{% endif %}>
        {% if section.settings.show_left_image %}  
        <div class="icon-section">
          {% if section.settings.show_left_image and  section.settings.left_side_image != blank %}
          <div class="icon">
            <img src="{{ section.settings.left_side_image | img_url: "960x1200"  }}" alt="{{ section.settings.icon_text1 }}"/>
          </div>
          {% else %}          
          <div class="item"><img src="//via.placeholder.com/960x1200"></div>
          {% endif %}   
        </div>
        {% endif %}

        <div class="banner-content text-{{section.settings.content_position}}">       

          {% if section.settings.text_1 != blank %}
          <h3 style="color:{{ section.settings.text_color }};">{{ section.settings.text_1 }}</h3>    
          {% endif %}
          {% if section.settings.title_1 != blank %}
          <h2 style="color:{{ section.settings.title_color }};">{{ section.settings.title_1 }} </h2>
          {% endif %}     


          <div class="deal-content">
            {% if section.settings.show_blocks %}  
			<div class="icon-wrapper">
              {% if section.settings.icon1 != blank or section.settings.icon_text1 != blank %}
              <div class="icon-content">
                {% if section.settings.icon1 != blank %}
                <div class="icon">
                  <img src="{{ section.settings.icon1 | img_url: "100x100"  }}" alt="{{ section.settings.icon_text1 }}"/>
                </div>
                {% else %}          
                <div class="item"><img src="//via.placeholder.com/100x100"></div>
                {% endif %} 
                {% if section.settings.icon_text1 != blank %}
                <span style="color:{{ section.settings.icon_text1_color}}">{{ section.settings.icon_text1 }} </span>
                {% endif %}
              </div>
              {% endif %} 
              
              {% if section.settings.icon2 != blank or section.settings.icon_text2 != blank %}
              <div class="icon-content">
                {% if section.settings.icon2 != blank %}
                <div class="icon">
                  <img src="{{ section.settings.icon2 | img_url: "100x100"  }}" alt="{{ section.settings.icon_text2 }}"/>
                </div>
                {% else %}          
                <div class="item"><img src="//via.placeholder.com/100x100"></div>
                {% endif %} 
                {% if section.settings.icon_text2 != blank %}
                <span style="color:{{ section.settings.icon_text2_color}}">{{ section.settings.icon_text2 }} </span>
                {% endif %}
              </div>
              {% endif %} 
              
              {% if section.settings.icon3 != blank or section.settings.icon_text3 != blank %}
              <div class="icon-content">
                {% if section.settings.icon3 != blank %}
                <div class="icon">
                  <img src="{{ section.settings.icon3 | img_url: "100x100"  }}" alt="{{ section.settings.icon_text3 }}"/>
                </div>
                {% else %}          
                <div class="item"><img src="//via.placeholder.com/100x100"></div>
                {% endif %} 
                {% if section.settings.icon_text3 != blank %}
                <span style="color:{{ section.settings.icon_text3_color}}">{{ section.settings.icon_text3 }} </span>
                {% endif %}
              </div>
              {% endif %} 
           
            </div>
            {% endif %} 


            {% if section.settings.textshadow_1 != blank %}
            <p  style="color:{{ section.settings.textshadow_1_color }};">{{ section.settings.textshadow_1 }}</p>    
            {% endif %}  

            {% if section.settings.button_1 != blank or  section.settings.button_2 != blank %}
            <div class="deal-btn">{% endif %}  {% if section.settings.button_1 != blank %}<a class="btn" href="{{ section.settings.link_1 }}" style="border:none;color:{{ section.settings.button_txt_color }};background-color:{{ section.settings.button_bg_color }};">{{ section.settings.button_1 }}</a>{% endif %} 


              {% if section.settings.button_2 != blank %}
              <a class="btn" href="{{ section.settings.link_2 }}" style="border:none;color:{{ section.settings.button_txt_color }};background-color:{{ section.settings.button_bg_color }};">{{ section.settings.button_2 }}</a>   
              {% endif %}   
              {% if section.settings.button_1 != blank or  section.settings.button_2 != blank %}
            </div> 
            {% endif %}  
          </div>
        </div>

      </div> 
      <div class="grid-uniform testimonials-block">
        <div class="border-title">
          {% if section.settings.sub_tm != blank %} 
          <div class="short-desc">
            <p style="color:{{ section.settings.sub_tm_clr }}">{{ section.settings.sub_tm }}</p>
          </div>  
          {% endif %}
          {% if section.settings.tm != blank %}
          <h2 style="color:{{ section.settings.tm_clr }}">{{ section.settings.tm }}</h2>
          {% endif %}       
        </div>
        {% if section.blocks.size > 0 %}
        <div class="quotes-slider swiper-container"  data-count="{{ section.blocks.size }}"  id="QuotesSection">  
          <div class="swiper-wrapper">
          {% for block in section.blocks %}
          <div class="quotes-slide--{{ forloop.index0 }} swiper-slide quotes-slide--{{ block.id }}" {{ block.shopify_attributes }}>  
            <div class="client-img"> 
              {% if block.settings.icon != blank %}
              <img class="quote-icon" src="{{ block.settings.icon | img_url: "master" }}" alt="{{ block.settings.quote }}" />
              {% else %}
              <img src="//via.placeholder.com/90x90">
              {% endif%}
            </div>
            {% if block.settings.quote != blank %}
            <div class="quote rte-setting">{{ block.settings.quote }}</div>
            {% endif %}
            <div class="client-info">
              {% if block.settings.author != blank %}
              <h5 class="quote-author">{{ block.settings.author | escape }}</h5>
              {% endif %}
              {% if block.settings.job != blank %}
              <span class="quote-job">{{ block.settings.job | escape }}</span>
              {% endif %}
            </div>
          </div>
          {% endfor %}      
        </div> 
           <div class="QuotesSection-arrows swiper-arrows">
          <div id="QuotesSection-next" class="swiper-button-next dt-sc-btn"></div>
          <div id="QuotesSection-prev" class="swiper-button-prev dt-sc-btn"></div>
        </div>  
        <div id="QuotesSection-pagination" class="swiper-pagination"></div>
          {% endif  %} 
        </div>        
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">   
  function homeTestimonialMain(){
   var swiper = new Swiper('#QuotesSection', {  
    pagination: {
      el: '#QuotesSection-pagination',
      clickable: true
    },
    navigation: {
      nextEl: '#QuotesSection-next',
      prevEl: '#QuotesSection-prev'
    },
    loop: true,
    slidesPerView: 3,       
    spaceBetween: 30,
    autoHeight: true,    
     allowTouchMove: true,
     autoplay: {
       delay: 5000,
     },
    simulateTouch: true,   
     draggable: true,
    breakpoints: {
          320: {
            slidesPerView: 1,
            spaceBetween: 20,
          },
          640: {
            slidesPerView: 2,
            spaceBetween: 20,
          },
          768: {
            slidesPerView: 2,
            spaceBetween: 40,
          },
          1024: {
            slidesPerView: 3,
            spaceBetween: 50,
          },
    },
  });
  }
  $(document).ready(function(){    
    homeTestimonialMain();
  })
  $(document)
  .on('shopify:section:load', homeTestimonialMain)
  .on('shopify:section:unload', homeTestimonialMain)
</script>
      
