  .wide-banner-style .quote p{ line-height: normal; margin: 0 0 15px;}
  .wide-banner-style .client-info .quote-author { font-size: 18px; font-weight: 700; margin: 0 0 10px;}
  
  
  
  
  .lof-clock-timer-detail ul li,.lof-clock-timer-detail ul li span { color:{{ section.settings.time_color }}; }
  .banner-content .lof-clock-timer-detail li:after { background:{{ section.settings.time_color }}; }
  .banner-content .deal-btn .btn:hover{background:{{ section.settings.button_bghover_color }}!important;color:{{ section.settings.button_txthover_color }}!important;}

  {% if section.settings.show_overlay %}   
/*   .home-wide-banner .dt-sc-overlay:before {
