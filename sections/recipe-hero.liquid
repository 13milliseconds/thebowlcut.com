<div class="recipe-hero-container container">
  <div class="recipe-hero">
      <div class="recipe-image">
        <div class="image-wrapper">
          <div class="image-inner">
            <img src="{{ article.image | image_url }}" alt="{{ article.title }}">
          </div>
        </div>
      </div>
      <div class="text-container">
        <h1 class="recipe-title">{{ article.title }}</h1>
        <p class="recipe-excerpt">{{ article.excerpt }}</p>
        <p>
          <span class="metafield">{{ article.metafields.servings.number }} servings | </span>
          <span class="metafield">{{ article.metafields.time.minutes }}</span>
        </p>
      </div>
  </div>
</div>

{% schema %}
{
  "name": "Recipe Hero",
  "settings": [
  ],
  "presets": [
    {
      "name": "Recipe Hero"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.recipe-hero-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.recipe-hero {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #F4F1EC;
  overflow: hidden;
  height: 100%;
  width: 100%;
}

.recipe-image {
  flex: 0 0 50%; /* Set the width to 50% of the flex container */
  overflow: hidden;
}

.image-wrapper {
  position: relative;
  padding-top: 100%; /* Maintain the 1:1 aspect ratio */
}

.image-inner {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
}

.recipe-image img {
  object-fit: cover;
  object-position: center;
  width: 100%;
  height: auto;
  max-height: 100%; /* Stretch the image height to fit the container */
}

.text-container {
  display: flex;
  justify-content: center;
  flex-direction: column;
  margin-left: 5rem; /* Adjust the spacing between the image and text as needed */
}

  .recipe-details {
    flex: 0.4;
    padding-left: 1rem;
  }

  .recipe-title {
    margin-bottom: 0.5rem;
  }

  .recipe-excerpt {
    margin-bottom: 0.5rem;
  }

  .metafield {
    display: inline-block;
    margin-right: 0.5rem;
  }

  /* Responsive Styles */
@media only screen and (max-width: 768px) {
  .recipe-hero {
    flex-direction: column !important;
  }
  .text-container {
    margin-left: 0 !important;
  }
  .recipe-hero .image-wrapper {
    padding-top: 0 !important;
  }
  .recipe-hero .image-inner {
    position: relative;
    height: 20rem;
  }
  
  .recipe-image {
    flex: 1;
    width: 100%;
  }
  h1.recipe-title {
    margin-top: 0 !important;
  }
}

{% endstylesheet %}